{
  "mode": "devel",
  "paths": {
    "hop_dir": "~/.hop",
    "log_dir": "~/.hop/log/server",
    "cache_dir": "~/.hop/cache/server",
    "hoprc": ""
  },
  "run": {
    "port": 9001,
    "clear_cache": true,
    "https": {
      "enable": false,
      "pkey_filepath": "~/.cert/server.key",
      "cert_filepath": "~/.cert/server.crt"
    },
    "addr_listen": ""
  },
  "logging": {
    "verbosity": 5,
    "debug": 2,
    "warning": 0,
    "security": 1,
    "time": true,
    "color": true
  }
}
